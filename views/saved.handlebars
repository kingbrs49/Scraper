<div class="jumbotron jumbotron-fluid text-center">
    <h1 class="display-4">
        <b>
            Your Saved Sports Stories
        </b>
    </h1>
    <p class="lead">See what you scraped from the Associated Press Sports site!</p>
</div>


{{#each article}}
{{#if this.saved}}
<div class="container">
    <div class="card">
        <div class="card-body">
            <a href={{this.link}}>
                <h4>{{this.title}}</h4>
            </a>
            <p class="lead">{{this.description}}</p>
            <button class="btn btn-outline-primary" id="deleteArticle">
                Delete
            </button>
            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#articleComment">
                Comment
            </button>
            <div id="articleComment" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Care To Comment?</h4>
                        </div>
                        <div class="modal-body">
                            <textarea class="form-control" id="notes"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" id="saveComment" data-dismiss="modal">Save Comment</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
{{/if}}
{{/each}}