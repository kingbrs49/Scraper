<div class="jumbotron jumbotron-fluid text-center">
    <h1 class="display-4">
        <b>
            Your Saved Sports Stories
        </b>
    </h1>
    <p class="lead">See what you scraped from the Associated Press Sports site!</p>
</div>


{{#each article}}
{{#if this.saved}}
<div class="container">
    <div class="card">
        <div class="card-body">
            <a href={{this.link}}>
                <h4>{{this.title}}</h4>
            </a>
            <p class="lead">{{this.description}}</p>
            <a class="btn btn-outline-primary" role="button">
                Comment
            </a>
        </div>
    </div>
</div>
<br>
{{/if}}
{{/each}}