<div class="jumbotron jumbotron-fluid text-center">
    <h1 class="display-4">
        <b>
            AP Sports Scraper
        </b>
    </h1>
    <p class="lead">Get the latest sports stories from the Associated Press!</p>
</div>

{{#each article}}
{{#unless this.saved}}
<div class="container">
    <div class="card">
        <div class="card-body">
            <a href={{this.link}}>
                <h4>{{this.title}}</h4>
            </a>
            <p class="lead">{{this.description}}</p>
            <button class="btn btn-outline-primary saveArticle" data-id={{this._id}}>
                Save
            </button>
            <button type="button" class="comment btn btn-outline-primary" data-id={{this._id}} data-toggle="modal" data-target=".articleComment">
                Comment
            </button>
            <div class="modal fade articleComment" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Care To Comment?</h4>
                        </div>
                        <div class="modal-body">
                            <textarea class="form-control notes"></textarea>
                        </div>
                        <div id="comments">
                            
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default saveComment" data-dismiss="modal">Save Comment</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
{{/unless}}
{{/each}}